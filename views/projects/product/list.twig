{% extends 'default/layout.twig' %}


{% block content %}

    <h2>Products of {{ project.getName() }}</h2>
    <h4>Total Amount: ${{ project.getTotalCost()|number_format(2, '.', ',') }}</h4>

    <h5>
        <a class="btn btn-md btn-info" href="{{ app.urlFor('Projects-Project-List') }}">
            <i class="fa fa-arrow-circle-left"></i>
            Back
        </a>
    </h5>

    <hr>

    <div class="create-div">
        <a class="btn btn-md btn-info"
           href="{{ app.urlFor('Projects-Product-Create',{projectId:project.getId()}) }}">
            Add Product
        </a>
    </div>

    <br>

    <table class="table" id="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
                <th>Estimated Hours</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            {% for obj in list %}
                <tr>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#product{{ obj.getId() }}">
                            {{ obj.getName() }}
                        </a>
                    </td>
                    <td>$ {{ obj.getValue()|number_format(2, '.', ',') }}</td>
                    <td>{{ obj.getEstimatedhours()|number_format(0, '.', ',') }}</td>
                    <td>
                        <a class="btn btn-info" href="{{ app.urlFor('Projects-Product-Edit', {'projectId':project.getId(),'id':obj.getId()}) }}">Editar</a>
                        <a class="btn btn-danger" href="{{ app.urlFor('Projects-Product-Delete', {'projectId':project.getId(),'id':obj.getId()}) }}">Excluir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% for obj in list %}
        <div id="product{{ obj.getId() }}" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Product Details</h4>
                    </div>
                    <div class="modal-body">

                        <div class="row" style="padding:10px;">
                            <div class="col-md-6 col-sm-6">
                                <h4>Name</h4>
                                <p>{{ obj.getName() }}</p>

                                <br>

                                <h4>Estimated Hours</h4>
                                <p>{{ obj.getEstimatedHours() }}</p>

                                <br>

                            </div>

                            <div class="col-md-6 col-sm-6">
                                <h4>Project</h4>
                                <p>{{ obj.getProject().getName() }}</p>

                                <br>

                                <h4>Description</h4>
                                <p>{{ obj.getDescription() }}</p>
                            </div>


                            <div class="col-md-12 col-sm-12" style="text-align: center;">
                                <hr>
                                <h3>Value: $ {{ obj.getValue() }}</h3>
                            </div>
                        </div>

                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    {% endfor %}


    <script type="text/javascript">
        jQuery( document ).ready( function( $ ) {
            var $table = jQuery( "#table" );
            $table.DataTable( {
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', {
                        extend: 'pdfHtml5',
                        title: 'Products of {{ project.getName() }}',
                        text: 'PDF'
                    }
                ]
            } );
        } );
    </script>

{% endblock %}